@model AdminAlmacen.ViewModels.LoginViewModel
@{
    ViewBag.Title = "Index";
    Layout = null;
} 
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="It's a page to manage a company.">
    <meta name="author" content="Jorge De Jesús (Jorjaiis)">
    <title>Login</title>
    @Styles.Render("~/Content/Logincss")
</head>

<body>
    <div id="form">
        <div id="logo_container">
            <img id="image" src="~/Content/Images/bus.png" />
        </div>
        <hr />

        <div>
            @if (!String.IsNullOrEmpty(ViewBag.login_error))
            {
                <p class="alert alert-danger alert-danger"><b>@ViewBag.login_error</b></p>
            }
            else if (!String.IsNullOrEmpty(ViewBag.data_error))
            {
                <p class="alert alert-warning"><b>@ViewBag.data_error</b></p>
            }
            else
            {
                <p><b> “Sueña sin miedos, vive sin límites.”</b></p>
            }
        </div>

        @using (Html.BeginForm("Index", "Login", FormMethod.Post))
        {
            <div>
                <label>Email address</label>
                <div class="input-group input-group-md">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-user"></i></span>
                    </div>
                    @Html.TextBoxFor(m => m.email, new { @class = "form-control", @placeholder= "Email address", @type = "email", required = "required" })
                    <!--<input type="email" class="form-control" placeholder="Email address" name="email" />-->
                </div>
            </div>
            <div>
                <label>Password</label>
                <div class="input-group input-group-md">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="fas fa-lock"></i></span>
                    </div>
                    @Html.PasswordFor(m => m.password, new { @class = "form-control", @placeholder = "Email address", @type ="password", required = "required" })
                    <!--<input type="password" class="form-control" placeholder="Password" name="password" />-->
                </div>
                <small id="emailHelp" class="form-text text-muted">We'll never share your info with anyone else.</small>
            </div>

            <div class="form-group" style="padding:15px 0px">
                <input class="btn btn-primary btn-md btn-block rounded-pill" type="submit" value="Authenticate" />
            </div>
            <a href="#" id="forgot" style="font-size:small;">Forgot password</a>
            <a href="#" id="support" style="font-size:small;">Support</a>
               }
    </div>
</body>

@Scripts.Render("~/Content/Loginjs")
</html>