@model List<AdminAlmacen.ViewModels.CountryViewModel>
@{
    ViewBag.Title = "CreateProvider";
}

<h2>Proveedor</h2>
<form action="@Url.Content("~/Provider/CreateProvider")" method="post">
    <div class="row">
        <div class="col">
            <div class="form-group">
                <span class="col"><i class="fa fa-building"></i> Nombre de Prooveedor</span>
                <div class="col">
                    <input type="text" name="name" placeholder="Nombre" class="col form-control" autocomplete="off" required />
                </div>
            </div>

            <div class="form-group">
                <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-phone"></i> Teléfono</span>
                <div class="col">
                    <input id="fname" name="phone" type="tel" placeholder="Telefono" class="form-control" autocomplete="off" required>
                </div>
            </div>

            <div class="form-group">
                <span class="col"><i class="fa fa-map"></i> Ubicación</span>
                <div class="col">
                    <select class="form-control" name="location">
                        <option value="0" disabled selected>Seleccione un estado</option>
                        @foreach (var country in Model)
                        {
                            <option value="@country.id">@country.name</option>
                        }
                    </select>
                </div>
            </div>

            <!--
             <div class="form-check">
                <span class="col">
                    <input type="checkbox" class="form-check-input" id="chkContact" onchange="faddContact()" />
                    <label class="form-check-label" for="chkContact">Agregar Contacto</label>
                </span>
            </div>
            -->

        </div>

        <div class="col">
            <div class="form-group">
                <span class="col-md-1 col-md-offset-2 text-center"><i class="fa fa-hashtag"></i> RFC</span>
                <div class="col">
                    <input name="rfc" type="text" placeholder="RFC" class="form-control" autocomplete="off" minlength="12" maxlength="13" required>
                </div>
            </div>

            <div class="form-group">
                <span class="col"><i class="fa fa-map"></i> Dirección</span>
                <div class="col">
                    <input name="address" type="text" placeholder="Dirección" class="form-control" autocomplete="off" required />
                </div>
            </div>

        </div>
    </div>

    <div class="form-group" style="padding: 15px ">
        <input class="btn btn-success" type="submit" value="Agregar Proveedor" />
    </div>

</form>

@Scripts.Render("~/Content/jscript/CreateProvider")