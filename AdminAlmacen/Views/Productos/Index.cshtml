@model List<AdminAlmacen.ViewModels.ProductosViewModel>
@{
    ViewBag.Title = "IndexProductos";
}
@section css{
    @Styles.Render("~/Content/Tablescss")
}
<div class="row">
    <a class="btn btn-success" href="~/Productos/Nuevo">Nuevo</a>
</div>
<br />
<br />
<div class="card shadow mb-4">
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead class="thead-dark">
                    <tr>
                        <th>Código</th>
                        <th>Producto</th>
                        <th>Descripción</th>
                        <th>Costo</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var pro in Model)
                    {
                        <tr>
                            <td>@pro.codigo</td>
                            <td>@pro.nombre</td>
                            <td>@pro.descripcion</td>
                            <td>$@pro.costo</td>
                            <td>
                                <a class="btn btn-primary" href="~/Productos/Editar/@pro.id">Editar</a>
                                <a class="btn btn-primary" href="@Url.Action("Editar","Productos", new { id = pro.id })">Editar2</a>
                                <a class="btn btn-danger" href="~/Productos/Eliminar/@pro.id">Eliminar</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="row">

</div>
@section js{
    @Scripts.Render("~/Content/Tablesjs")
}